{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    <h1>Library</h1>

    <h2>Users</h2>
    <ul>
        {% for user in users %}
            <li>{{ user.name }}</li>
        {% endfor %}
    </ul>

    <h2>Books</h2>
    <ul>
        {% for book in books %}
            <li>{{ book.title }} by {{ book.author }}</li>
        {% endfor %}
    </ul>

    <h2>Borrowings</h2>
    <ul>
        {% for user in users %}
            {% for borrowing in user.borrowings %}
                <li>{{ user.name }} borrowed {{ borrowing.book.title }}</li>
            {% endfor %}
        {% endfor %}
    </ul>
{% endblock %}